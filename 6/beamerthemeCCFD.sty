\newlength{\headLogoVSkip}
\setlength{\headLogoVSkip}{-\headPartHeight + (\headHeight - \headLogoHeight) * \real{0.5} }

\newlength{\headLogoHSkip}
\setlength{\headLogoHSkip}{\paperwidth - \headLogoWidth - 2mm}

\newlength{\headPartTextX}
