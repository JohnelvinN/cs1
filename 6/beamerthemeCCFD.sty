\newlength{\headPartTextShadeX}
\setlength{\headPartTextShadeX}{\headPartTextX + \headPartTextDepth}

\newlength{\headPartTextShadeY}
\setlength{\headPartTextShadeY}{\headPartTextY - \headPartTextDepth}

\newlength{\headFinalVSkip}
\setlength{\headFinalVSkip}{ (\headHeight - \headLogoHeight) * \real{0.5} }

\newlength{\wutWidth}
